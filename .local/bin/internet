#!/bin/sh

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ï– if connected to ethernet or â if none.


case "$(cat /sys/class/net/e*/operstate 2>/dev/null)" in
	up) 
		icon="ï– ";;
	down) 
		case "$(cat /sys/class/net/w*/operstate 2>/dev/null)" in
			up) icon="$(awk '/^\s*w/ { print "ï‡« ", int($3 * 100 / 70) "% " }' /proc/net/wireless)" ;;
			down) icon="ï " ;;
		
		esac;;
esac



printf "%s\n" $icon 
